pipeline {
  agent {
    kubernetes {
        label 'default-java'
        yaml  """
apiVersion: v1
kind: Pod
metadata:
    labels:
        service: "ci"
spec:
    containers:
        - name: "maven"
          image: 'maven'
          command:
          - 'cat'
          tty: true
"""
    }
  }
  stages {
    stage('Run maven') {
      steps {
        container('maven') {
          sh 'mvn -version'
        }
      }
     stage('Build') {
        step {
            container('maven') {
            sh 'mvn clean install'
            }
        }
     }
    }
  }
}
